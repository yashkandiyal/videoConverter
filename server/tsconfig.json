// server/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    // These are the key changes for a modern Node.js ESM project
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Your existing good settings
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true, // Still good to have for compatibility
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
